}

#custom-main, #custom-scale, #custom-color, #custom-fzf, #custom-config, #custom-info, #custom-backup, #custom-wall-select, #custom-dots, #custom-update, #custom-play, #custom-stop, #custom-drawer {
   color: @extra;
   border-bottom: 2px solid @extra;
   padding-left: 2px;
   padding-right: 2px;
}

#custom-player {
  color: @music;
}

#custom-uname {
  color: @sys-info;
}

#custom-group-icon-2 {
    color: @extra;
    border-bottom: 2px solid @extra;
    padding-left: 4px;
}

