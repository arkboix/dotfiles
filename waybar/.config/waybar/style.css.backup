#window {
    font-weight: bolder;
    font-family: "Fira Sans, Ubuntu";
    color: @fg;
}



#window.empty {
    border-top: none;
    background: none;
}

#workspaces {
  padding: 0px;
  font-weight: 900;
}


#workspaces button /*#custom-play, #custom-stop*/ {
    background: transparent;
    color: @workspaces-gray;
    padding: 0px;
    padding-right: 6px;
    padding-left: 6px;
    border-top: 0px solid transparent;
}

#workspaces button.active {
    color: @bg;
    background-color: @color13;
    border-bottom: 2px solid @color13;
    padding-right: 6px;
    padding-left: 6px;
}


#battery, #cpu, #memory, #pulseaudio, #custom-spotify, #tray, #mode {
    padding: 0 3px;
    margin: 0 2px;
    font-weight: bold;
    border-bottom: 2px solid @color5;
}

#clock {
    font-weight: bolder;
}

#battery {
   color: @battery;
   border-bottom: 2px solid @battery;
}

#battery icon {
    color: red;
}

#battery.charging {
}

@keyframes blink {
    to {
        background-color: #ffffff;
        color: black;
    }
}


#battery.warning:not(.charging) {
    color: white;
    animation-name: blink;
    animation-duration: 0.5s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    animation-direction: alternate;
}

#cpu {
}

#memory {
    color: @memory;
    border-bottom: 2px solid @memory;
}


#network.disconnected {
    background: #f53c3c;
}

#pulseaudio {
    color: @color13;
    border-bottom: 2px solid @color13;
}

#pulseaudio.muted {
}

#custom-spotify {
    color: rgb(102, 220, 105);
}

#tray {
    border-bottom: 2px solid @tray;
}


#custom-wofi, #custom-swaync, #custom-wall, #custom-reload, #custom-power {
    border-bottom: 2px solid @extra;
    color: @extra;
    padding-left: 2px;
    padding-right: 2px;
}

#clock {
    border-bottom: 2px solid @extra;
    margin-left: 2px;
}

#custom-power {
	color: @extra;
}


